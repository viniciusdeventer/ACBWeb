@model List<ACBWeb.Models.Conta>

<div id="contas-container">
    <table class='table table-hover table-striped'>
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center col-">Data de Abertura</th>
                <th class="text-center col-4">Situação</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var conta in Model)
                {
                    <tr data-id="@conta.IdConta" onclick="abrirModalConta(@conta.IdConta)" style="cursor: pointer;">
                        <td class="text-center align-middle">@conta.IdConta</td>
                        <td class="text-center align-middle">@conta.DataAbertura?.ToString("dd/MM/yyyy")</td>
                        <td class="text-center align-middle">
                            @(conta.Situacao == 0 ? "Em Aberto" :
                            conta.Situacao == 1 ? "Pago" :
                            conta.Situacao == 2 ? "Pago Parcial" : "")
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @{
        ViewBag.ModalId = "modalConta";
    }
    @await Html.PartialAsync("_Paginacao")
</div>
@{
    ViewBag.Title = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usuario.css" />
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg border-0 custom-card">
        <div class="card-header text-center bg-white border-0 mb-3">
            <img src="@Url.Content("~/assets/images/logo.png")" alt="Logo" class="img-fluid" style="max-width: 150px;" />
        </div>
        <div class="card-body">
            <form method="POST">
                <div class="form-group mb-4 position-relative">
                    <label for="usuario" class="form-label">Usuário</label>
                    <input type="text" id="usuario" name="usuario" class="form-control" placeholder="Digite seu usuário" required />
                </div>
                <div class="form-group mb-4 position-relative">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" id="senha" name="senha" class="form-control" placeholder="********" required />
                </div>
                <button type="submit" class="btn btn-warning w-100">Entrar</button>
            </form>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usuario.css" />
}

<div class="background d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow custom-card">
        <div class="card-header text-center bg-white border-0">
            <img src="@Url.Content("~/assets/images/logo.png")" alt="Logo" class="img-fluid" style="max-width: 150px;" />
        </div>
        <div class="card-body">
            <form method="POST">
                <div class="form-group mb-4">
                    <label for="usuario">Usuário</label>
                    <input type="text" id="usuario" name="usuario" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="senha">Senha</label>
                    <input type="password" id="senha" name="senha" class="form-control" placeholder="***********" required />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-warning w-100">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


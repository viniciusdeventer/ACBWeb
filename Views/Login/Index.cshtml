@{
    ViewBag.Title = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="d-flex vh-100">
    <div class="col-left">
    </div>

    <div class="col-right d-flex justify-content-center align-items-center bg-light">
        <div class="card p-4 border-0 custom-card">
            <div class="card-header text-center bg-white border-0 mb-1">
                <img src="@Url.Content("~/assets/images/logo.png")" alt="Logo" class="img-fluid" style="max-width: 150px;" />
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-group mb-4 position-relative">
                        <label for="usuario" class="form-label">Usuário</label>
                        <input type="text" id="usuario" name="usuario" class="form-control form-custom" placeholder="Digite seu usuário" required />
                    </div>
                    <div class="form-group mb-4 position-relative">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" id="senha" name="senha" class="form-control form-custom" placeholder="*************" required />
                    </div>
                    <button type="submit" class="btn btn-warning w-100">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</div>


@model List<ACBWeb.Models.Produto>

@section Scripts {
    <script src="~/js/produto.js"></script>
}

@{
    ViewBag.Title = "Produtos";
}

@await Html.PartialAsync("_Sidebar")
@await Html.PartialAsync("_Navbar")

<main class="conteudo">
    <div class="hero">
        <div class="container py-4">
            <h4 class="titulo mb-3">Produtos</h4>
            <form method="POST" asp-controller="Produto" asp-action="Index">
                <div class="input-group">
                    <input type="search" class="form-control" name="termo" placeholder="Digite aqui o que gostaria de pesquisar..." aria-label="Pesquisa">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
            @await Html.PartialAsync("_Lista", Model)
            @await Html.PartialAsync("_Botoes")
        </div>
    </div>
</main>

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalProdutoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_Form", new ACBWeb.Models.Produto())
            </div>
        </div>
    </div>
</div>


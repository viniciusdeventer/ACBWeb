@model ACBWeb.Models.Produto

<form method="post" asp-action="Salvar" asp-controller="Produto">
    <div class="row">
        <div class="form-group readonly">
            <label asp-for="IdProduto" class="form-label">ID</label>
            <input asp-for="IdProduto" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="form-group">
            <label asp-for="ValorProduto" class="form-label">Valor</label>
            <input asp-for="ValorProduto" class="form-control" type="number" />
        </div>

        <div class="form-group">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
            </select>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>
